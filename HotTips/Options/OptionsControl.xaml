<UserControl x:Class="HotTips.Options.OptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotTips"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Show tips from these groups" Margin="20" VerticalAlignment="Top">
            <StackPanel x:Name="TipGroupsListBox" HorizontalAlignment="Left" MinHeight="60" Margin="20" VerticalAlignment="Top" CanVerticallyScroll="True"/>
        </GroupBox>
        <StackPanel Orientation="Horizontal" Margin="20">
            <TextBlock Margin="0 0 6 0">Show again: </TextBlock>
            <ComboBox x:Name="ShowAgainComboBox" Width="160" ></ComboBox>
            <TextBlock x:Name="ShowAgainTextBlock" Margin="6 0 0 0"></TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
